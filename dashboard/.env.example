# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=quirkly

# JWT Secret (Generate with: openssl rand -hex 64)
JWT_SECRET=your-super-secret-jwt-key-here-min-32-characters

# AI Provider Configuration
AI_PROVIDER=groq  # Options: groq (fast), xai (fast + excellent reasoning)

# Groq Configuration (FAST)
GROQ_API_KEY=your-groq-api-key-here

# Groq Model Selection (AVAILABLE MODELS ONLY):
#
# BEST FOR SPEED + GOOD REASONING (Recommended):
# GROQ_MODEL=llama-3.3-70b-versatile  # 276-394 T/S, 128K context, $0.59/$0.79 per 1M
#
# BEST FOR BLAZING SPEED (6x faster):
# GROQ_MODEL=llama-3.3-70b-specdec  # 1,665 T/S (!!), 128K context, speculative decoding
#
# BUDGET/SIMPLE REPLIES (weak reasoning):
# GROQ_MODEL=llama-3.1-8b-instant  # 6000 T/S, 30K TPM, less knowledge
#
GROQ_MODEL=llama-3.3-70b-versatile  # Default - balanced speed + reasoning

# XAI Configuration (EXCELLENT REASONING + FAST)
XAI_API_KEY=your-xai-api-key-here

# XAI Model Selection (RECOMMENDED FOR REASONING):
#
# BEST FOR CRITICAL THINKING (Recommended):
# XAI_MODEL=grok-4-fast-reasoning  # 227-344 T/S, 2M context, $0.20/$0.50 per 1M
#                                  # Built specifically for reasoning, 10x faster than Grok 4
#                                  # CHEAPEST option with BEST reasoning
#
# Standard Grok (NOT RECOMMENDED - too slow):
# XAI_MODEL=grok-4  # 40 T/S, 5-10s response time, overkill for quick replies
#
XAI_MODEL=grok-4-fast-reasoning  # Fast + excellent reasoning

# Stripe Configuration (Optional - for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# App Configuration
NEXT_PUBLIC_APP_URL=https://quirkly.technioz.com
NODE_ENV=production

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
