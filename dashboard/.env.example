# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=quirkly

# JWT Secret (Generate with: openssl rand -hex 64)
JWT_SECRET=your-super-secret-jwt-key-here-min-32-characters

# AI Provider Configuration
AI_PROVIDER=groq  # Options: groq (recommended - fast), xai (slow but powerful)

# Groq Configuration (FAST & RECOMMENDED)
GROQ_API_KEY=your-groq-api-key-here

# Groq Model Selection (choose based on your needs):
#
# BEST FOR CRITICAL THINKING & REASONING (Recommended):
# GROQ_MODEL=deepseek-r1-distill-llama-70b  # 280 T/S, 60K TPM, excellent reasoning
#
# BEST GENERAL PURPOSE (Balanced):
# GROQ_MODEL=llama-3.3-70b-versatile  # 280 T/S, 300K TPM (default if not set)
#
# BEST FOR SPEED (Ultra-fast):
# GROQ_MODEL=llama-3.1-8b-instant  # 6000 T/S, 30K TPM, less reasoning
#
# BEST FOR COMPLEX REASONING:
# GROQ_MODEL=mixtral-8x7b-32768  # Mixture of Experts, good reasoning
#
GROQ_MODEL=deepseek-r1-distill-llama-70b  # Change this to your preferred model

# XAI Configuration (SLOW - not recommended for quick replies)
XAI_API_KEY=your-xai-api-key-here
XAI_MODEL=grok-4  # Warning: 5+ seconds per reply, massive model

# Stripe Configuration (Optional - for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# App Configuration
NEXT_PUBLIC_APP_URL=https://quirkly.technioz.com
NODE_ENV=production

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
